<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>
        <variable
            name="viewModel"
            type="com.daqsoft.module_project.viewmodel.ProjectAddViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <include
            app:toolbarViewModel="@{viewModel.toolbarViewModel}"
            android:id="@+id/include"
            layout="@layout/layout_toolbar">
        </include>
        <View
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@+id/include"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white_e8e8e8"
            android:layout_width="0dp"
            android:layout_height="1dp">
        </View>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_type"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_type1"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目类型"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_type"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="10dp"
                        android:gravity="end"
                        android:hint="请选择"
                        android:text="@{viewModel.typeObservable.name}"
                        android:textColorHint="@color/color_999999"
                        android:drawableRight="@mipmap/add_tzgg_yjt"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_flow"
                    app:layout_constraintTop_toBottomOf="@+id/cl_type"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_flow_left"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目流程"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_flow"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="10dp"
                        android:hint="请选择"
                        android:text="@{viewModel.flowObservable.processName}"
                        android:gravity="end"
                        android:textColorHint="@color/color_999999"
                        android:drawableRight="@mipmap/add_tzgg_yjt"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_flow_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_name"
                    app:layout_constraintTop_toBottomOf="@+id/cl_flow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目名称"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <EditText
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:hint="请输入项目名称"
                        android:gravity="end"
                        android:text="@={viewModel.detailedName}"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </EditText>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_jc"
                    app:layout_constraintTop_toBottomOf="@+id/cl_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_jc"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目简称"
                        android:textColor="@color/black_333333"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <EditText
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:hint="请输入项目简称"
                        android:background="@null"
                        android:gravity="end"
                        android:text="@={viewModel.CommonName}"
                        android:layout_marginRight="20dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_jc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </EditText>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_yz"
                    app:layout_constraintTop_toBottomOf="@+id/cl_jc"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_yz"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目业主"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_yz_right"
                        onClickCommand="@{viewModel.onChooseOwner}"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:hint="请选择"
                        android:text="@{viewModel.ownerObservable.customerName}"
                        android:gravity="end"
                        android:textColorHint="@color/color_999999"
                        android:drawableRight="@mipmap/add_tzgg_yjt"
                        android:layout_marginRight="20dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_yz"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_yz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pater"
                    app:layout_constraintTop_toBottomOf="@+id/cl_yz"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pater"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="合作伙伴"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_pater_right"
                        onClickCommand="@{viewModel.onChoosePater}"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:hint="请选择"
                        android:text="@{viewModel.patnerObservable.partnerName}"
                        android:gravity="end"
                        android:textColorHint="@color/color_999999"
                        android:drawableRight="@mipmap/add_tzgg_yjt"
                        android:layout_marginRight="20dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_pater"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pater"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_level"
                    app:layout_constraintTop_toBottomOf="@+id/cl_pater"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目等级"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:drawableRight="@mipmap/icon_bt_tishi"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_level_right"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:hint="请选择"
                        android:textColorHint="@color/color_999999"
                        android:layout_marginRight="20dp"
                        android:gravity="end"
                        android:text="@{viewModel.levelLiveData.name}"
                        app:layout_constraintRight_toRightOf="parent"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/add_tzgg_yjt"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_money"
                    app:layout_constraintTop_toBottomOf="@+id/cl_level"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="项目金额"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_yuan"
                        android:text="元"
                        android:textColor="@color/black_333333"
                        android:textSize="15sp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="20dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <EditText
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        android:hint="请输入项目金额"
                        android:gravity="end"
                        android:text="@={viewModel.projectMoney}"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:maxLength="12"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintRight_toLeftOf="@+id/tv_yuan"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </EditText>

                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/gray_e8e8e8"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="0dp"
                        android:layout_height="1dp">
                    </View>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_quest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cl_money"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/white_ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:textColor="#333"
                            android:text="项目背景"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:textColor="@color/color_999999"
                            android:text="@{viewModel.maxBgNumber}"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"
                            android:gravity="center_vertical"/>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_quest"
                        android:textSize="15sp"
                        android:textColor="@color/color_333333"
                        android:background="@null"
                        android:textColorHint="@color/gray_999999"
                        android:hint="请输入项目背景"
                        app:textChanged="@{viewModel.textChangedListener}"
                        android:layout_marginTop="15dp"
                        android:maxLength="500"
                        android:gravity="start"
                        android:text="@={viewModel.projectBgObservable}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                    <View
                        android:background="@color/white_e8e8e8"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="1dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_gk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ll_quest"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/white_ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:textColor="#333"
                            android:text="项目概况"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:textColor="@color/color_999999"
                            android:text="@{viewModel.maxGkNumber}"
                            android:maxLength="500"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"
                            android:gravity="center_vertical"/>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_gk"
                        android:textSize="15sp"
                        android:textColor="@color/color_333333"
                        android:background="@null"
                        android:textColorHint="@color/gray_999999"
                        android:hint="请输入项目概况"
                        app:textChanged="@{viewModel.textGkChangedListener}"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:maxLength="500"
                        android:text="@={viewModel.projectGkObservable}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                    <View
                        android:background="@color/white_e8e8e8"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="1dp"/>
                </LinearLayout>


                <com.ruffian.library.widget.RTextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_gk"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="确认创建项目"
                    android:textColor="@color/white_f5f5f5"
                    app:corner_radius="5dp"
                    android:textSize="16sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    app:background_normal="@color/red_fa4848"
                    onClickCommand="@{viewModel.onUndateData}"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>