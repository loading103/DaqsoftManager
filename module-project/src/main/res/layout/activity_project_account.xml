<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>
        <import type="com.daqsoft.module_project.R"/>
        <variable
            name="viewModel"
            type="com.daqsoft.module_project.viewmodel.ProjectAccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5f5f5">
        <include
            app:toolbarViewModel="@{viewModel.toolbarViewModel}"
            android:id="@+id/include"
            layout="@layout/layout_toolbar">
        </include>
        <View
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@+id/include"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white_e8e8e8"
            android:layout_width="0dp"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="再添一笔"
                android:background="@color/white_ffe3e3"
                android:textSize="16sp"
                android:textColor="#fa4848"/>
            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="确认"
                android:background="@color/color_fa4848"
                android:textSize="16sp"
                android:textColor="@color/white_ffffff"/>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintLeft_toLeftOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/ll_time"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white_ffffff"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:paddingVertical="5dp"
                        android:textColor="#333"
                        android:text="选择日期"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/gray_999999"
                        android:hint="请选择"
                        android:id="@+id/tv_time"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/tv_1"
                        android:textSize="15dp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/add_tzgg_yjt"/>
                    <View
                        android:layout_below="@+id/tv_1"
                        android:background="@color/white_e8e8e8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_money"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_time"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/white_ffffff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:paddingVertical="5dp"
                        android:textColor="#333"
                        android:text="总金额"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/white_fa4848"
                        android:text="¥ 0.00"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/tv_2"
                        android:textSize="15dp"
                        android:layout_marginLeft="38dp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

                <com.daqsoft.module_project.widget.AccountAddView
                    android:id="@+id/ll_contain"
                    app:layout_constraintTop_toBottomOf="@+id/ll_money"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>