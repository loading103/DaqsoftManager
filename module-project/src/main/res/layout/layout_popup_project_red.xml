<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

    </data>


    <com.ruffian.library.widget.RConstraintLayout
        app:background_normal="@color/white_ffffff"
        app:corner_radius_top_right="5dp"
        app:corner_radius_top_left="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            app:corner_radius_top_right="5dp"
            app:corner_radius_top_left="5dp"
            app:background_normal="@color/red_fa4848"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/icon"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:paddingHorizontal="30dp"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:id="@+id/title2"
                android:text="文化旅游云"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </com.ruffian.library.widget.RLinearLayout>

        <ImageView
            android:src="@mipmap/bmwj_more_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:tint="@color/white"
            android:id="@+id/close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            tools:ignore="UseAppTint">
        </ImageView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_title">
            <com.ruffian.library.widget.RConstraintLayout
                app:background_normal="@color/white_ffffff"
                android:layout_width="match_parent"
                android:paddingBottom="100dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ll_infor"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/color_333333"
                    android:layout_gravity="center"
                    android:text="产品介绍"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ll_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/ll_infor_content"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/color_333333"
                    android:layout_gravity="center"
                    android:text="这里是产品介绍，主要说明这个定制化产品解决什么核心问题，有哪些大致的核心功能"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_infor"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:id="@+id/line"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_infor_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/gray_e8e8e8"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="1dp">
                </View>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:itemAnimator="@{null}"
                        android:layout_marginHorizontal="20dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:id="@+id/file_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
            </com.ruffian.library.widget.RConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.ruffian.library.widget.RConstraintLayout>
</layout>