<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:paddingBottom="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="ResourceName">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_f5f5f5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_1"
        android:includeFontPadding="true"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:text="金额（元）"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/xmdtl_sc"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_1"/>
    <TextView
        android:id="@+id/tv_2"
        android:includeFontPadding="true"
        android:textSize="31sp"
        android:textColor="@color/color_333333"
        android:text="¥"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/et_money"
        android:textSize="31sp"
        android:textColor="@color/color_333333"
        android:background="@null"
        android:textColorHint="@color/gray_999999"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_2"
        android:maxLength="9"
        android:layout_marginLeft="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="number|numberDecimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </EditText>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e8e8e8"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_3"
        android:includeFontPadding="true"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:text="资金用途"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/et_yt"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:hint="请填写资金用途"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:textColorHint="@color/gray_999999"
        app:layout_constraintLeft_toRightOf="@+id/tv_3"
        app:layout_constraintBottom_toBottomOf="@+id/tv_3"
        android:layout_marginLeft="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </EditText>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e8e8e8"
        app:layout_constraintTop_toBottomOf="@+id/tv_3"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tv_4"
        android:includeFontPadding="true"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:text="费用类型"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/et_type"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:text="请选择"
        app:layout_constraintLeft_toRightOf="@+id/tv_4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_4"
        android:layout_marginLeft="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_4"
        android:layout_marginTop="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/add_tzgg_yjt"/>
</androidx.constraintlayout.widget.ConstraintLayout>
