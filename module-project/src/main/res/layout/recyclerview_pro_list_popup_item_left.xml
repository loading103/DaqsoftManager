<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <import type="android.view.View" />

        <variable
            name="content"
            type="com.daqsoft.module_project.repository.pojo.vo.ProjectChooseType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <com.ruffian.library.widget.RTextView
            android:text="@{content.name}"
            app:icon_direction="right"
            android:id="@+id/content"
            android:paddingHorizontal="20dp"
            app:text_color_selected="@color/red_fa4848"
            app:text_color_pressed="@color/red_fa4848"
            app:text_color_normal="@color/black_333333"
            app:background_normal="@color/white_f5f5f5"
            app:background_selected="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44.5dp">
        </com.ruffian.library.widget.RTextView>

        <View
            android:background="@color/gray_e8e8e8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0.5dp">
        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


