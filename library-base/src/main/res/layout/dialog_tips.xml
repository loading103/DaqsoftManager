<?xml version="1.0" encoding="utf-8"?>

<com.ruffian.library.widget.RConstraintLayout
    app:background_normal="@color/white_ffffff"
    app:corner_radius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">


        <TextView
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

        <View
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:id="@+id/line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d4d4d4">
        </View>

        <View
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_horizontal"
            android:id="@+id/line_vertical"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/gray_d4d4d4">
        </View>

        <TextView
            android:text="@string/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_horizontal"
            app:layout_constraintRight_toLeftOf="@+id/line_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:text="@string/determine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/line_vertical"
            android:textColor="@color/red_fa4848"
            android:textSize="18sp"
            android:id="@+id/determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

</com.ruffian.library.widget.RConstraintLayout>

