<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <import type="com.daqsoft.module_workbench.R" />

    </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/tv_text"
           android:text="今日待办"
           android:textColor="@color/black_333333"
           android:textSize="14sp"
           android:layout_margin="20dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>


       <ImageView
           android:src="@mipmap/rw_list_selected"
           android:layout_marginRight="20dp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="@+id/tv_text"
           app:layout_constraintTop_toTopOf="@+id/tv_text"
           android:id="@+id/iv_image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </ImageView>


       <View
           android:background="@color/gray_e8e8e8"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="@+id/tv_text"
           android:layout_marginTop="20dp"
           app:layout_constraintTop_toBottomOf="@+id/tv_text"
           android:id="@+id/line"
           android:layout_width="0dp"
           android:layout_height="1dp">
       </View>

   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


