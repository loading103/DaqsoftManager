<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <import type="com.daqsoft.module_workbench.R" />

        <variable
            name="viewModel"
            type="com.daqsoft.module_workbench.viewmodel.itemviewmodel.StaffItemMoreViewModel" />

    </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:background="@color/white_ffffff"
       android:paddingBottom="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <com.ruffian.library.widget.RTextView
           android:drawablePadding="8dp"
           android:textSize="12sp"
           android:text="更多任务"
           android:textColor="@color/black_333333"
           app:onClickCommand="@{viewModel.moreOnClick}"
           app:icon_normal_right="@mipmap/txl_details_arrow_down"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </com.ruffian.library.widget.RTextView>
       
   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


