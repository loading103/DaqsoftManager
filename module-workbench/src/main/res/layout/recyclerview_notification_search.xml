<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <import type="com.daqsoft.module_workbench.R" />
        <import type="android.view.View" />


    </data>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white_ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/icon"
                android:gravity="center"
                android:text="行政"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:id="@+id/image"
                android:src="@mipmap/tzgg_list_qz_fczy"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintTop_toTopOf="@+id/icon"
                app:layout_constraintBottom_toBottomOf="@+id/icon"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于小旗审批流程启用的通知"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                android:maxLines="2"
                app:layout_constraintBottom_toBottomOf="@+id/image"
                android:id="@+id/title"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/image"
           >
            </TextView>

            <TextView
                android:text="各子公司、各中心请在2020年2月6日18:00前，提交至综后管理部缪晓琴处。"
                android:textColor="#666666"
                android:textSize="13sp"
                android:id="@+id/tv_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>


            <TextView
                android:text="技术中心 - 产品管理部 等6个部门"
                android:textColor="#ff9e05"
                android:textSize="11sp"
                android:id="@+id/tv_content_des"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:id="@+id/iv_head"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_content_des"
                android:layout_width="20dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_height="20dp"/>

            <TextView
                android:text="方三三  |  2020-10-31 17:13:15 （5天前）"
                android:textColor="#999999"
                android:textSize="12sp"
                android:id="@+id/tv_place"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_head"
                app:layout_constraintTop_toTopOf="@+id/iv_head"
                app:layout_constraintBottom_toBottomOf="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>


