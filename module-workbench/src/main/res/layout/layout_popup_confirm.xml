<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <com.ruffian.library.widget.RLinearLayout
        app:corner_radius="5dp"
        app:background_normal="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:textColor="@color/black_333333"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_content"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:textColor="@color/gray_666666"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:padding="12dp"
            android:background="@null"
            android:visibility="gone"
            android:id="@+id/et_input"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textColor="@color/black_333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/xpopup_divider1"
            android:background="@color/gray_d4d4d4"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:textSize="18sp"
                android:text="@string/xpopup_cancel"
                android:textColor="#666666"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:id="@+id/xpopup_divider2"
                android:background="@color/gray_d4d4d4"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/red_fa4848"
                android:textSize="18sp"
                android:id="@+id/tv_confirm"
                android:text="@string/xpopup_ok"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.ruffian.library.widget.RLinearLayout>
</layout>