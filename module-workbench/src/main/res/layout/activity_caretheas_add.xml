<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">
    <data>

        <import type="com.daqsoft.module_workbench.R" />

        <variable
            name="viewModel"
            type="com.daqsoft.module_workbench.viewmodel.CareThesaurusAddViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_ffffff">
        <include
            app:toolbarViewModel="@{viewModel.toolbarViewModel}"
            android:id="@+id/include"
            layout="@layout/layout_toolbar">
        </include>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/gray_e8e8e8"
            android:layout_below="@+id/include">
        </View>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            android:layout_below="@+id/line"
            android:descendantFocusability="blocksDescendants" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_ffffff">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="词条内容"
                    android:textSize="16sp"
                    android:textColor="@color/black_333333"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:hint="请输入词条内容"
                    android:text="@={viewModel.content}"
                    android:textSize="16sp"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_999999"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <View
                    android:id="@+id/line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_e8e8e8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_content"/>

                <TextView
                    android:id="@+id/title_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转URL"
                    android:textSize="16sp"
                    android:textColor="@color/black_333333"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_1"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <EditText
                    android:id="@+id/et_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入跳转URL"
                    android:text="@={viewModel.content_url}"
                    android:textSize="16sp"
                    android:background="@null"
                    android:gravity="start"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_999999"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_url"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <View
                    android:id="@+id/line_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_e8e8e8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_url"/>


                <TextView
                    android:id="@+id/zhanshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="展示位置"
                    android:textSize="16sp"
                    android:textColor="@color/black_333333"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_2"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <com.daqsoft.module_workbench.widget.LabelsView
                    android:id="@+id/labelsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="20dp"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    app:labelBackground="@drawable/care_round_5"
                    app:labelTextColor="@color/black_333333"
                    app:labelTextHeight="wrap_content"
                    app:labelTextPaddingBottom="10dp"
                    app:labelTextPaddingLeft="13dp"
                    app:labelTextPaddingRight="13dp"
                    app:labelTextPaddingTop="10dp"
                    app:labelTextSize="12sp"
                    app:labelTextWidth="wrap_content"
                    app:lineMargin="10dp"
                    app:maxSelect="100"
                    app:minSelect="1"
                    app:selectType="MULTI"
                    app:wordMargin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/zhanshi"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/red_fa4848"
            android:text="保存"
            app:onClickCommand="@{viewModel.saveOnClick}"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white_ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </RelativeLayout>
</layout>