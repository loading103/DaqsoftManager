<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <import type="com.daqsoft.module_workbench.R" />

        <variable
            name="viewModel"
            type="com.daqsoft.module_workbench.viewmodel.itemviewmodel.DailySearchDateViewModel" />

    </data>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="15dp"
           android:paddingBottom="15dp"
           android:paddingLeft="15dp"
           android:background="@color/white_f5f5f5"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@{viewModel.day}"
               android:textColor="@color/black_333333"
               android:textSize="20sp"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@{viewModel.month}"
               android:textColor="@color/black_333333"
               android:textSize="13sp"
               />

       </LinearLayout>

</layout>


